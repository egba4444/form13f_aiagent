# Form 13F AI Agent - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Required for Phase 1 (Data Ingestion)
# ============================================================================

# SEC EDGAR API
# Must include company name and contact email
SEC_USER_AGENT="YourCompanyName contact@youremail.com"

# ============================================================================
# Required for Phase 2+ (Database)
# ============================================================================

# PostgreSQL Database
DATABASE_URL="postgresql://form13f_user:your_password_here@localhost:5432/form13f"

# Or for async (used by some libraries)
DATABASE_URL_ASYNC="postgresql+asyncpg://form13f_user:your_password_here@localhost:5432/form13f"

# Docker-specific: PostgreSQL password
DB_PASSWORD="your_secure_password_here"

# ============================================================================
# Required for Phase 4+ (AI Agent)
# ============================================================================

# LiteLLM Configuration (supports 100+ LLM providers)
# See: https://docs.litellm.ai/docs/providers

# Provider: anthropic, openai, azure, gemini, bedrock, etc.
LLM_PROVIDER="anthropic"

# Model identifier (provider-specific)
LLM_MODEL="claude-3-5-sonnet-20241022"

# API Keys (set the one for your chosen provider)
ANTHROPIC_API_KEY="sk-ant-your-key-here"
OPENAI_API_KEY=""
AZURE_API_KEY=""
GEMINI_API_KEY=""

# Optional: Custom base URL for self-hosted or proxy endpoints
LLM_BASE_URL=""

# Optional: LLM parameters
LLM_MAX_TOKENS="4096"
LLM_TEMPERATURE="0.0"
LLM_TIMEOUT="60"
LITELLM_LOG_LEVEL="ERROR"

# ============================================================================
# Optional: For CUSIP â†’ Ticker Resolution
# ============================================================================

# OpenFIGI API (free tier works)
# Leave empty to use free tier (25 req/min)
OPENFIGI_API_KEY=""

# ============================================================================
# Optional: For Phase 7 (RAG)
# ============================================================================

# OpenAI Embeddings
OPENAI_API_KEY="sk-your-key-here"

# Qdrant Vector Database
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""  # Only if using Qdrant Cloud

# ============================================================================
# Application Settings
# ============================================================================

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT="json"  # json or text

# Environment
ENVIRONMENT="development"  # development, staging, production

# API Settings (for Phase 5+)
API_HOST="0.0.0.0"
API_PORT="8000"
API_WORKERS="4"

# Rate Limiting
RATE_LIMIT_PER_MINUTE="100"
